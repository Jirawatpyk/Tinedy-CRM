{
  "name": "tinedy-crm",
  "version": "1.0.0",
  "description": "Tinedy CRM - Internal CRM system for managing customers, jobs, and quality control workflows",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter crm-app dev",
    "build": "pnpm --filter crm-app build",
    "start": "pnpm --filter crm-app start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:api": "jest tests/integration/api --testTimeout=60000",
    "test:validation": "jest tests/unit/validation",
    "test:database": "jest tests/unit/database",
    "test:security": "jest tests/security --testTimeout=30000",
    "test:performance": "jest tests/performance --testTimeout=120000",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm --filter crm-app playwright test",
    "db:push": "cd apps/crm-app && prisma db push",
    "db:generate": "cd apps/crm-app && prisma generate",
    "db:migrate": "cd apps/crm-app && prisma migrate dev",
    "db:migrate:deploy": "cd apps/crm-app && prisma migrate deploy",
    "db:migrate:reset": "cd apps/crm-app && prisma migrate reset",
    "db:seed": "cd apps/crm-app && tsx prisma/seed.ts",
    "db:studio": "cd apps/crm-app && prisma studio",
    "db:validate": "node scripts/validate-migration.js",
    "clean": "rm -rf .next node_modules coverage test-results"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^5.22.0",
    "@types/dompurify": "^3.2.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dompurify": "^3.2.7",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^3.0.0",
    "prisma": "^6.16.2",
    "shadcn": "^3.3.1",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.0.0"
  }
}
